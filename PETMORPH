-- Make sure you name your pet your username on roblox for it to work!

local playername = game.Players.LocalPlayer.Character.Name
local platform = Instance.new("Part")
local Player = game.Players.LocalPlayer
local charPos = Player.Character.HumanoidRootPart

platform.Size = Vector3.new(5,0.2,5)
platform.Name = "gamestring"
platform.Anchored = true
platform.CFrame = charPos.CFrame * CFrame.new(0, -70, 0)
platform.Parent = workspace

charPos.CFrame = charPos.CFrame * CFrame.new(0, -65, 0)
for i, v in pairs(game:GetService("Workspace").__THINGS.Pets:GetDescendants()) do
if v.ClassName == "BillboardGui" and v.Nickname.Text ==  playername then
print(v.Parent)
game.Workspace.Camera.CameraSubject = v.Parent
end
end
task.wait(0.2)

while true do
platform.CFrame = CFrame.new(charPos.CFrame.X, platform.CFrame.Y, charPos.CFrame.Z)
task.wait()
end
